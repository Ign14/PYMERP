# ========================================
# PYMERP - Production Environment Variables
# ========================================
# ⚠️  DO NOT commit this file with real values!
# ⚠️  Copy to .env.production and replace ALL values
# ========================================

# --------------------------------------------
# DATABASE
# --------------------------------------------
POSTGRES_HOST=your-postgres-host.example.com
POSTGRES_PORT=5432
POSTGRES_DB=pymes_prod
POSTGRES_USER=pymes_prod_user
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# --------------------------------------------
# REDIS CACHE
# --------------------------------------------
REDIS_HOST=your-redis-host.example.com
REDIS_PORT=6379

# --------------------------------------------
# EMAIL/SMTP
# --------------------------------------------
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=notifications@yourcompany.com
MAIL_PASSWORD=REPLACE_WITH_EMAIL_PASSWORD
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true

# --------------------------------------------
# JWT AUTHENTICATION (⚠️ CRITICAL)
# --------------------------------------------
# Generate with: openssl rand -base64 32
# OR PowerShell: [Convert]::ToBase64String((1..32 | ForEach-Object { Get-Random -Minimum 0 -Maximum 256 }))
JWT_SECRET=REPLACE_WITH_RANDOM_BASE64_SECRET_32BYTES

# --------------------------------------------
# BILLING / INVOICING (⚠️ CRITICAL)
# --------------------------------------------
# Generate with: openssl rand -base64 32
BILLING_CRYPTO_SECRET=REPLACE_WITH_RANDOM_BASE64_SECRET_32BYTES

# Generate with: openssl rand -hex 32
# OR PowerShell: -join ((48..57) + (65..90) + (97..122) | Get-Random -Count 64 | ForEach-Object {[char]$_})
BILLING_WEBHOOK_SECRET=REPLACE_WITH_RANDOM_HEX_SECRET_64CHARS

# Base URL for PDF documents (must be HTTPS in production)
BILLING_DOCUMENTS_BASE_URL=https://api.yourcompany.com/api/v1

# --------------------------------------------
# STORAGE (S3 / MinIO)
# --------------------------------------------
STORAGE_S3_BUCKET=pymes-prod-bucket
STORAGE_S3_ACCESS_KEY=REPLACE_WITH_AWS_ACCESS_KEY
STORAGE_S3_SECRET_KEY=REPLACE_WITH_AWS_SECRET_KEY
STORAGE_S3_REGION=us-east-1
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# --------------------------------------------
# WEBHOOKS (⚠️ CRITICAL)
# --------------------------------------------
# Generate with: openssl rand -hex 32
WEBHOOKS_HMAC_SECRET=REPLACE_WITH_RANDOM_HEX_SECRET_64CHARS

# --------------------------------------------
# OAUTH2 / OIDC (Optional - Keycloak/Auth0)
# --------------------------------------------
OIDC_ENABLED=false
# If OIDC_ENABLED=true, configure:
# SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=https://your-keycloak.com/realms/pymes

# ========================================
# VALIDATION CHECKLIST BEFORE DEPLOY:
# ========================================
# ✅ All REPLACE_WITH_* values are changed
# ✅ JWT_SECRET is at least 32 characters
# ✅ All secrets are randomly generated (not defaults)
# ✅ .env.production is in .gitignore
# ✅ Database credentials are strong
# ✅ BILLING_DOCUMENTS_BASE_URL uses HTTPS
# ✅ S3 bucket exists and has proper IAM policies
# ========================================
