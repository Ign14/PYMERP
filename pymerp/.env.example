# Copy this file to .env and replace placeholders with secure values before deployment.
# Never commit the real .env with production credentials.

# PostgreSQL configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pymerp
POSTGRES_USER=pymerp
POSTGRES_PASSWORD=local-postgres-password

# JWT secret (>=32 characters)
JWT_SECRET=example-jwt-secret-32-characters-long

# Billing webhook secret (>=24 characters)
BILLING_WEBHOOK_SECRET=billing-webhook-secret-24chars-long!!

# Billing crypto secret (base64 example)
BILLING_CRYPTO_SECRET=MDEyMzQ1Njc4OUFCQ0RFRjAxMjM0NTY3ODlBQkNERUY=

# Storage S3 / MinIO credentials
STORAGE_S3_BUCKET=pymerp-storage-bucket
STORAGE_S3_ACCESS_KEY=pymerp-storage-access
STORAGE_S3_SECRET_KEY=pymerp-storage-secret
STORAGE_S3_REGION=us-east-1

# Redis settings (all required when validation is enabled)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis-password-example
REDIS_SSL_ENABLED=false

# Mailhog / SMTP in dev
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# Webhook HMAC signing key
WEBHOOKS_HMAC_SECRET=webhooks-hmac-secret-32chars!!

# Feature toggles
# Set app.security.secrets-validation.enabled=true via application-prod.yml to enforce these requirements in production.
